<resources  xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="style">
        <item name="android:fontFamily" tools:targetApi="jelly_bean">casual</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#fdfbfb</item>
    </style>
    <style name="style2">
        <item name="android:fontFamily" tools:targetApi="jelly_bean">casual</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#fffefe</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/buttonColor</item>
        <item name="android:text">@string/next</item>
        <item name="android:layout_margin">@dimen/largeSpacing</item>
        <item name="android:layout_alignParentRight">true</item>
    </style>

    <style name="style3">
        <item name="android:fontFamily" tools:targetApi="jelly_bean">casual</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#303F9F</item>
    </style>
    <style name="style4">
        <item name="android:fontFamily" tools:targetApi="jelly_bean">casual</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#f0f1f5</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/normalSpacing</item>
        <item name="android:background">@color/question</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">5dp</item>

    </style>

    <style name="style5">
        <item name="android:fontFamily" tools:targetApi="jelly_bean">casual</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#eff0f5</item>
    </style>

    <style name="styleCard">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:layout_marginBottom">@dimen/normalSpacing</item>
        <item name="android:layout_marginLeft">@dimen/largeSpacing</item>
        <item name="android:layout_marginRight">@dimen/largeSpacing</item>
        <item name="android:layout_marginTop">@dimen/normalSpacing</item>

    </style>

</resources>

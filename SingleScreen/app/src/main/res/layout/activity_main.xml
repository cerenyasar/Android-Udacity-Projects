<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.singlescreen.MainActivity"
    android:background="@color/background"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <ImageView
            android:id="@+id/yildiz"
            android:layout_width="match_parent"
            android:layout_height="230dp"
            android:src="@mipmap/ytulogo"
            android:layout_marginTop="@dimen/smallMargin"/>
        <ImageView
            android:id="@+id/ytu"
            android:layout_below="@id/yildiz"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:src="@mipmap/ytu"
            />
        <TextView
            android:layout_marginTop="@dimen/extraLargeMargin"
            android:background="#67ffffff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/ytu"
            android:gravity="center"
            android:textAppearance="@style/styleTwo"/>

        <android.support.v7.widget.CardView
            android:id="@+id/text"
            android:layout_below="@id/ytu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/smallMargin"
            android:layout_marginLeft="@dimen/largeMargin"
            android:layout_marginRight="@dimen/largeMargin"
            android:layout_marginTop="@dimen/smallMargin"
            card_view:cardBackgroundColor="@color/background"
            card_view:cardCornerRadius="15dp"
            card_view:cardElevation="@dimen/mediumMargin"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/smallMargin">
                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/bir"></View>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    >
                    <View
                        android:layout_width="2dp"
                        android:layout_height="match_parent"
                        android:background="@color/bir"></View>
                    <ImageView
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/MediumSize"
                        android:src="@drawable/address"/>
                    <TextView
                        android:layout_marginLeft="@dimen/smallMargin"
                        android:layout_weight="4"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/address"
                        android:textAppearance="@style/styleOne"
                        android:gravity="center_vertical"/>
                    <View
                        android:layout_width="2dp"
                        android:layout_height="match_parent"
                        android:background="@color/bir"></View>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    >
                    <View
                        android:layout_width="2dp"
                        android:layout_height="match_parent"
                        android:background="@color/bir"></View>
                    <ImageView
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/MediumSize"
                        android:src="@drawable/web"/>
                    <TextView
                        android:layout_marginLeft="@dimen/smallMargin"
                        android:layout_weight="4"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:text="@string/website"
                        android:textAppearance="@style/styleOne"
                        android:gravity="center_vertical"/>
                    <View
                        android:layout_width="2dp"
                        android:layout_height="match_parent"
                        android:background="@color/bir"></View>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    >
                    <View
                        android:layout_width="2dp"
                        android:layout_height="match_parent"
                        android:background="@color/bir"></View>
                    <ImageView
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/MediumSize"
                        android:src="@drawable/phone"/>
                    <TextView
                        android:layout_marginLeft="@dimen/smallMargin"
                        android:layout_weight="4"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:text="@string/phone"
                        android:textAppearance="@style/styleOne"
                        android:gravity="center_vertical"/>
                    <View
                        android:layout_width="2dp"
                        android:layout_height="match_parent"
                        android:background="@color/bir"></View>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    >
                    <View
                        android:layout_width="2dp"
                        android:layout_height="match_parent"
                        android:background="@color/bir"></View>
                    <ImageView
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/MediumSize"
                        android:src="@drawable/faks"
                        />
                    <TextView
                        android:layout_marginLeft="@dimen/smallMargin"
                        android:layout_weight="4"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:text="@string/fax"
                        android:textAppearance="@style/styleOne"
                        android:gravity="center_vertical"/>
                    <View
                        android:layout_width="2dp"
                        android:layout_height="match_parent"
                        android:background="@color/bir"></View>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/bir"></View>
            </LinearLayout>
        </android.support.v7.widget.CardView>

    </RelativeLayout>

</ScrollView>
